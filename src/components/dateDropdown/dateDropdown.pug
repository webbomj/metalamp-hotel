include ../airDatePicker/airDatePicker.pug

mixin dateDropdown({uniqId = 'uniqIdsQQ2', firstTitle ='date dropdown', secondTitle = 'date dropdown', placeholder = 'ДД.ММ.ГГГГ', placeholder2 = '19.08.2019'})
  .dateDropdown
    .dateDropdownLeft
      +textField({id: uniqId, title: firstTitle, description: '', value: '', placeholder: placeholder, readonly: true, classNames: 'dateDropdownLeft__main', styles: 'margin-bottom: 17px', dropdown: true})
    .dateDropdownRight
      +textField({id: uniqId, title: secondTitle, description: '', value: '', placeholder: placeholder2, readonly: true, classNames: 'dateDropdownRight__main', styles: 'margin-bottom: 17px', dropdown: true})
  .dateDropdown__close(data-dateDropdown=uniqId)

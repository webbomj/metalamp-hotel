include ../text-field/text-field.pug

mixin footer({id = "uniqIdFooter", type = "full"})
  .footer 
    if type === 'full'
      .footer__full
        .footer__top-block 
          .footer__first 
            img.footer__logo(src=require("../../images/Logo.png"), alt="Логотип")
            span.footer__span.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          .footer__second
            h3.footer__header Навигация
            ul.footer__list 
              li.footer__item
                a.footer__link(href="#") О нас
              li.footer__item
                a.footer__link(href="#") Новости
              li.footer__item
                a.footer__link(href="#") Служба поддержки
              li.footer__item
                a.footer__link(href="#") Услуги
          .footer__third
            h3.footer__header О нас
            ul.footer__list 
              li.footer__item
                a.footer__link(href="#") О сервисе
              li.footer__item
                a.footer__link(href="#") Наша команда
              li.footer__item
                a.footer__link(href="#") Вакансии
              li.footer__item
                a.footer__link(href="#") Инвесторы
          .footer__forth 
            h3.footer__header Служба поддержки
            ul.footer__list 
              li.footer__item
                a.footer__link(href="#") Соглашения
              li.footer__item
                a.footer__link(href="#") Сообшества
              li.footer__item
                a.footer__link(href="#") Связь с нами
          .footer__fifth 
            h3.footer__header Подписка
            span.footer__span Получайте специальные предложения и новости сервиса
            .footer__fifth-text
              +text-field({uniqId: id, title: '', description: '', placeholder: 'Email', arrow: true, small: true})
        .footer__middle-block 
          img.footer__logo(src=require("../../images/Logo.png"), alt="Логотип")
        .footer__bot-block
          span.footer__copyright Copyright © 2018 Toxin отель. Все права защищены.
          .footer__social-buttons
            span.footer__icon &#xf099;
            span.footer__icon &#xf082;
            span.footer__icon &#xf16d;
    else
      .footer__small 
        img.footer__small-logo(src=require("../../images/Logo.png"), alt="Логотип")
        span.footer__copyright Copyright © 2018 Toxin отель. Все права защищены.
        .footer__small-social-buttons
          span.footer__icon &#xf099;
          span.footer__icon &#xf082;
          span.footer__icon &#xf16d;

extends ../../layouts/UI/UI.pug
include ../../components/text-field/text-field.pug
include ../../components/button/button.pug
include ../../components/dropdown/dropdown.pug
include ../../components/airDatePicker/airDatePicker.pug
include ../../components/filter-date-dropdown/filter-date-dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/checkbox/checkbox.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/radio-button/radio-button.pug
include ../../components/expandable-checkbox-list/expandable-checkbox-list.pug
include ../../components/icon-text-list/icon-text-list.pug
include ../../components/like-button/like-button.pug
include ../../components/rate-button/rate-button.pug
include ../../components/comment/comment.pug
include ../../components/pagination/pagination.pug
include ../../components/toggle/toggle.pug

block header
  title Form elements
  meta(name="description", content="Form elements - metalamp 2 step")
  meta(name="keywords", content="Form elements")

block content
  section.form-elements
    .form-elements__firstColumn
      .form-elements__firstBlock
        .form-elements__text-field
          +text-field({uniqId: 'textField1', title: 'Text field', description: 'default', placeholder: 'Email'})
        .form-elements__text-field
          +text-field({uniqId: 'textField2', title: 'Text field', description: 'hover / focus', placeholder: 'Email', value: 'This is pretty awesome'})
        .form-elements__dropdown
          +dropdown({uniqId: 'dropdown1', title: 'dropdown', description: 'hover', text: 'Сколько гостей'})
        .form-elements__text-field--masked
          +text-field({uniqId: 'textField3', title: 'Masked text field', description: '', placeholder: 'ДД.ММ.ГГГГ', mask: true})
        .form-elements__dropdown--date
          +date-dropdown({uniqId: 'dateDropdown1', firstTitle: 'date dropdown', secondTitle: 'date dropdown'})
        .form-elements__dropdown--filter
          +filter-date-dropdown({uniqId: 'filterDateDropdown1'})
        .form-elements__text-field--sub
          +text-field({uniqId: 'textField4', title: 'subscription text field', description: '', placeholder: 'Email', arrow: true, small: true})
      .form-elements__secondBlock
        .form-elements__dropdown
          +dropdown({uniqId: 'dropdown2', type: 'furniture', title: 'dropdown', small: true, description: 'default', text: '2 спальни, 2 кровати...'})
        .form-elements__dropdown
          +dropdown({uniqId: 'dropdown3', type: 'furniture', title: 'dropdown', small: true, description: 'expanded', text: '2 спальни, 2 кровати...', open: true})
      .form-elements__thirdBlock
        .form-elements__expandable-checkbox
          +expandable-checkbox-list({id: 'expandableCheckbox1', title: 'expandable checkbox list'})
        .form-elements__expandable-checkbox--open
          +expandable-checkbox-list({id: 'expandableCheckbox2', title: 'expandable checkbox list', open: true})
        .form-elements__icon-text-list
          +icon-text-list({list: [{title: 'Комфорт', text: 'Шумопоглощающие стены', icon: 'insert_emoticon'}, {title: 'Удобство', text: 'Окно в каждой из спален', icon: 'location_city'}]})
    .form-elements__secondColumn
      .form-elements__firstBlock
        .form-elements__checkbox-button
          h3.form-elements__header Checkbox Buttons
          +checkbox({id: 'checkbox1', title: 'Можно курить'})
          +checkbox({id: 'checkbox2', title: 'Можно с питомцами'})
          +checkbox({id: 'checkbox3', title: 'Можно пригласить гостей (до 10 человек)'})
        .form-elements__radio-button
          h3.form-elements__header Radio Buttons
          .form-elements__radio-button-box
            +radio-button({id: 'radio-button1', title:'Мужчина', name: 'checkboxed', checked: true})
            +radio-button({id: 'radio-button2', title: 'Женщина', name: 'checkboxed'})
        .form-elements__toggle
          h3.form-elements__header Toggle
          +toggle({id: 'toggle1', text: 'Получать спецпредложения', cheked: true})
          +toggle({id: 'toggle2', text: 'Получать спецпредложения'})
        .form-elements__like-button
          h3.form-elements__header like button
          .form-elements__like-button-box
            +like-button({number: 2, clicked: false})
            +like-button({number: 12, clicked: true})
        .form-elements__rate-button
          h3.form-elements__header rate button
            .form-elements__rate-button-box
              +rate-button({id: 'rateButton1', size: 3})
              +rate-button({id: 'rateButton2', size: 4})
      .form-elements__secondBlock
        .form-elements__dropdown
          +dropdown({uniqId: 'dropdown4', title: 'dropdown', description: 'expanded', text: 'Сколько гостей', open: true})
      .form-elements__thirdBlock
        .form-elements__checkboxes
          h3.form-elements__header rich Checkbox Buttons
          +checkbox({id: 'SuperIDcheckbox33', title: 'Широкий коридор', rich: true, richText: 'Ширина коридоров в номере не менее 91 см.'})
          +checkbox({id: 'SuperIDcheckbox344', title: 'Помощник для инвалидов', rich: true, richText: 'На 1 этаже вас встретит специалист и проводит до номера.'})
        .form-elements__comment
          +comment({id: 'UniqIdComment1', title: 'Мурад Сарафанов', date: '5 дней', photo: 'photo.png', likes: 12, liked: true, text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
    .form-elements__thirdColumn
      .form-elements__firstBlock
        .form-elements__range-slider
          h3.form-elements__header range slider
        .form-elements__buttons
          h3.form-elements__header buttons
          .form-elements__topButtons
            +button({title: 'click me'})
            +button({title: 'click me'})
          .form-elements__middleButtons
            +button({title: 'click me', type: 'white'})
            +button({title: 'click me', type: 'white'})
          .form-elements__botButtons
            +button({title: 'click me', type: 'without'})
            +button({title: 'click me', type: 'without'})
          +button({title: 'Перейти к оплате', type: 'big', arrow: true})
        .form-elements__pagination
          h3.form-elements__header pagination
          +pagination({})
      .form-elements__secondBlock
        .form-elements__dropdown
          +dropdown({uniqId: 'dropdown5', title: 'dropdown', description: 'expanded', text: 'Сколько гостей', open: true})
      .form-elements__thirdBlock
        .form-elements__bullet-list
          h3.form-elements__header Bullet list
          +bullet-list({title: 'bullet list', list: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})

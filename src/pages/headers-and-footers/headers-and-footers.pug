extends ../../layouts/UI/UI.pug
include ../../components/header/header.pug
include ../../components/footer/footer.pug

block header
  title Headers and footers
  meta(name="description", content="Headers and footers - metalamp 2 step")
  meta(name="keywords", content="Headers and footers")

block content
  section.headers-and-footers 
    .headers-and-footers__first
      +header({id: 'header1'})
    .headers-and-footers__second
      +header({id: 'header2', auth: true})
    .headers-and-footers__footer 
      +footer({id: 'footer1', type: 'full'})
    .headers-and-footers__footer--small 
      +footer({id: 'footer2', type: 'Small'})

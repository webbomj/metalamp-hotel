extends ../../layouts/UI/UI.pug
include ../../components/room/room.pug
include ../../components/airDatePicker/airDatePicker.pug
include ../../components/findRooms/findRooms.pug
include ../../components/registration/registration.pug
include ../../components/booking/booking.pug
include ../../components/login/login.pug
include ../../components/UI-kit/numberRoomAndPrice/numberRoomAndPrice.pug

block header
  title Cards
  meta(name="description", content="Cards - metalamp 2 step")
  meta(name="keywords", content="cards")

block content
  .cards 
    .cards__firstColumn
      .cards__findRooms
        +findRooms({id: 'cardsFindRooms1'})
      .cards__registration
        +registration({})
    .cards__secondColumn
      .cards__booking
        +booking({id: 'cardsBooking1'})
      .cards__login
        +login({id: 'cardsLogin1'})
    .cards__thirdColumn
      .cards__airDatePicker 
        +airDatePicker({uniqId: 'cardsAirDatePicker1'})
      .cards__firstRoom
        +room({id: 'room1', type: 'люкс', price: '9 990', stars: 5, review: 145, array: ['room1.1.jpg', 'room1.1.jpg', 'room1.1.jpg', 'room1.1.jpg']})
      .cards__secondRoom
        +room({id: 'room2', type: '', number: '840', price: '9 990', stars: 4, review: 65, array: ['room.png', 'room.png', 'room.png', 'room.png']})

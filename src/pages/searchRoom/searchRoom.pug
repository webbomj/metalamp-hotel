extends ../../layouts/pages/pages.pug

include ../../components/textField/textField.pug
include ../../components/dropdown/dropdown.pug
include ../../components/filterDateDropdown/filterDateDropdown.pug
include ../../components/checkbox/checkbox.pug
include ../../components/expandableCheckboxList/expandableCheckboxList.pug
include ../../components/pagination/pagination.pug
include ../../components/room/room.pug

block content
  section.searchRoom
    .searchRoom__button
      +button({title: 'Открыть фильтр', type: 'big', arrow: false})
    .searchRoom__dropdown-filter.js-searchRoom__dropdown-filter
      .searchRoom__filter-menu 
        +filterDateDropdown({uniqId: 'searchRoom__filterDateDropdown2', title: 'даты пребывания в отеле'})
      .searchRoom__filter-menu 
        +dropdown({uniqId: 'searchRoom__dropdown2', title: 'гости', description: '', small: true, text: 'Сколько гостей'})
      .searchRoom__filter-menu 
      .searchRoom__filter-menu 
        h3 правила дома
        +checkbox({id: 'checkbox4', title: 'Можно курить'})
        +checkbox({id: 'checkbox5', title: 'Можно с питомцами'})
        +checkbox({id: 'checkbox6', title: 'Можно пригласить гостей (до 10 человек)'})
      .searchRoom__filter-menu 
        h3 доступность
        +checkbox({id: 'SuperIDcheckbox43', title: 'Широкий коридор', rich: true, richText: 'Ширина коридоров в номере не менее 91 см.'})
        +checkbox({id: 'SuperIDcheckbox444', title: 'Помощник для инвалидов', rich: true, richText: 'На 1 этаже вас встретит специалист и проводит до номера.'})
      .searchRoom__filter-menu 
        +dropdown({uniqId: 'dropdown3', type: 'furniture', title: 'Удобствa номера', small: true, description: '', text: '2 спальни, 2 кровати...'})
      .searchRoom__filter-menu 
        +expandableCheckboxList({id: 'expandableCheckbox2', title: 'дополнительные удобства'})
    .searchRoom__sidebar
      .searchRoom__dateDropdown 
        +filterDateDropdown({uniqId: 'searchRoom__filterDateDropdown1', title: 'даты пребывания в отеле'})
      .searchRoom__guestDropdown
        +dropdown({uniqId: 'searchRoom__dropdown1', title: 'гости', description: '', small: true, text: 'Сколько гостей'})
      .searchRoom__ratePriceSlider
      .searchRoom__rules
        h3 правила дома
        +checkbox({id: 'checkbox1', title: 'Можно курить'})
        +checkbox({id: 'checkbox2', title: 'Можно с питомцами'})
        +checkbox({id: 'checkbox3', title: 'Можно пригласить гостей (до 10 человек)'})
      .searchRoom__availability
        h3 доступность
        +checkbox({id: 'SuperIDcheckbox33', title: 'Широкий коридор', rich: true, richText: 'Ширина коридоров в номере не менее 91 см.'})
        +checkbox({id: 'SuperIDcheckbox344', title: 'Помощник для инвалидов', rich: true, richText: 'На 1 этаже вас встретит специалист и проводит до номера.'})
      .searchRoom__convenienceDropdown
        +dropdown({uniqId: 'dropdown2', type: 'furniture', title: 'Удобствa номера', small: true, description: '', text: '2 спальни, 2 кровати...'})
      .searchRoom__convenienceList
        +expandableCheckboxList({id: 'expandableCheckbox1', title: 'дополнительные удобства'})
    .searchRoom__mainContent
      h1.searchRoom__header Номера, которые мы для вас подобрали
      .searchRoom__hotelList 
